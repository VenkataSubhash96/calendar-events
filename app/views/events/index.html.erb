<%= form_for :event, url: events_path, method: :get, html: {class: 'well form-search', :autocomplete => "off"} do |f| %>
  <em>
    Start Date
  </em>
  <%= f.text_field :start_time, type: 'date', class: "datepicker", :autocomplete => "off"  %>
  <br/>
  <br/>
  <em>
    End Date
  </em>
  <%= f.text_field :end_time, type: 'date', class: "datepicker", :autocomplete => "off"  %>
  <br/>
  <br/>
  <%= f.submit 'submit', class: 'btn' %>
<%end%>


<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= event.title %>
        </td>
        <td>
          <%= event.start_time.strftime("%d-%m-%Y") %>
        </td>
        <td>
          <%= event.end_time.strftime("%d-%m-%Y") %>
        </td>
        <td>
          <%= event.description %>
        </td>
        <td>
          <%= event.status %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

